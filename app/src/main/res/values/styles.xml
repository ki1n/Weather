<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FullScreenDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_fon_weather</item>
        <item name="actionMenuTextColor">@color/teal_700</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Window</item>
    </style>

    <style name="DialogAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_down</item>
    </style>

    <style name="WeatherTextWhite15sp">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeatherTextWhite18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeatherTextBlack18sp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BottomSheetTextBlack28sp">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>